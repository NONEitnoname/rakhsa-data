      }
    },
    "recreational": {
      "chalet": {
        "spaces_per_chalet": 2,
        "notes": "Minimum 2 spaces per chalet"
      },
      "rest_house": {
        "spaces_per_unit": 2,
        "notes": "2 spaces per rest house unit"
      }
    }
  }
