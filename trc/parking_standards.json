      "hotel_4star": {
        "spaces_per_rooms": 0.5,
        "notes": "1 space per 2 rooms for 4-star hotels"
      },
      "restaurant_cafe_b": {
        "spaces_per_sqm": 0.08,
        "notes": "2 spaces per 25 sqm of area"
      },
