        "spaces_per_unit": 1,
        "notes": "1 space per apartment unit",
        "notes_ar": "موقف واحد لكل شقة"
      },
      "furnished_apartments": {
        "spaces_per_unit": 1,
        "notes": "1 space per furnished unit",
        "notes_ar": "موقف واحد لكل وحدة مفروشة"
      }
    },
    "commercial": {
      "hotel_5star": {
        "spaces_per_room": 1,
        "notes": "1 space per room for 5-star hotels"
